# ============================================================================
# YMCA Self-Reporting Portal Environment Configuration
# ============================================================================

# Application
NODE_ENV=development
PORT=3001
APP_NAME="YMCA Self-Reporting Portal"
APP_VERSION=1.0.0

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:3001/api/v1
NEXT_PUBLIC_APP_NAME="YMCA Self-Reporting Portal"
NEXT_PUBLIC_APP_VERSION=1.0.0

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password
DB_DATABASE=ymca_portal
DB_SSL=false

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# SAML/OIDC Authentication (optional)
SAML_ENTRY_POINT=https://your-sso-provider.com/saml/login
SAML_ISSUER=ymca-self-reporting-portal
SAML_CERT_PATH=/path/to/certificate.pem
SAML_PRIVATE_KEY_PATH=/path/to/private-key.pem

# AWS S3 Storage
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=ymca-evidence
S3_REGION=us-east-1
S3_FORCE_PATH_STYLE=true

# Email Configuration
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@ymca.org
SMTP_SECURE=false

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document,image/jpeg,image/png,image/gif
UPLOAD_PATH=./uploads

# CORS
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-in-production
COOKIE_SECRET=your-cookie-secret-change-in-production

# External Integrations
LCDC_API_URL=https://api.lcdc.org
LCDC_API_KEY=your-lcdc-api-key
QUALTRICS_API_URL=https://your-organization.qualtrics.com
QUALTRICS_API_TOKEN=your-qualtrics-api-token
COMPLIANCE_DATA_API_URL=https://api.compliancedata.org
COMPLIANCE_DATA_API_KEY=your-compliance-data-api-key

# Automation
ENABLE_AUTOMATION=true
AUTOMATION_CRON_SCHEDULE="0 9 * * *" # Daily at 9 AM
REMINDER_DAYS_BEFORE_DUE=7,3,1

# Development
ENABLE_SWAGGER=true
ENABLE_GRAPHIQL=true
DEBUG=true

# AI Advisory System (Azure OpenAI)
AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_MODEL=gpt-4

# AI Features
ENABLE_AI_ADVISORS=true
ENABLE_FALLBACK_ANALYSIS=true
ENABLE_AI_CACHING=true
MAX_TOKENS=2000
TEMPERATURE=0.3
ENABLE_AI_LOGGING=true
ENABLE_AI_METRICS=true
AI_LOG_LEVEL=info

# Production Overrides (uncomment for production)
# NODE_ENV=production
# DB_SSL=true
# S3_ENDPOINT=https://s3.amazonaws.com
# SMTP_SECURE=true
# ENABLE_SWAGGER=false
# ENABLE_GRAPHIQL=false
# DEBUG=false
