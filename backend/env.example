# ============================================================================
# Backend Environment Configuration
# ============================================================================

# Application
NODE_ENV=development
PORT=3001

# File Upload Configuration
MAX_UPLOAD_MB=25

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password
DB_DATABASE=ymca_portal
DB_SSL=false

# AI Advisory System (Azure OpenAI)
AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_MODEL=gpt-4

# AI Features
ENABLE_AI_ADVISORS=true
ENABLE_FALLBACK_ANALYSIS=true
ENABLE_AI_CACHING=true
MAX_TOKENS=2000
TEMPERATURE=0.3
ENABLE_AI_LOGGING=true
ENABLE_AI_METRICS=true
AI_LOG_LEVEL=info

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3002,http://127.0.0.1:3000,http://127.0.0.1:3002

# API Documentation
API_DOCS_URL=https://your-backend-url.herokuapp.com/api/docs

# Test Data (Development Only)
TEST_USER_PASSWORD=TestPassword123!
