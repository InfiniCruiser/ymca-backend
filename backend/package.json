{
  "name": "@ymca/backend",
  "version": "1.0.0",
  "description": "Backend API for YMCA Self-Reporting Portal",
  "main": "dist/backend/src/main.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "npm run build && node dist/backend/src/main.js",
    "dev": "npm run build && node dist/backend/src/main.js",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/backend/src/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "migration:run": "typeorm migration:run -d src/database/data-source.ts",
    "migration:generate": "typeorm migration:generate -d src/database/data-source.ts",
    "db:migrate": "npm run build && node dist/database/migrate.js",
    "db:seed": "npm run build && node dist/database/seed.js",
    "db:seed:dev": "ts-node src/database/seed.ts",
    "db:seed:enhanced": "ts-node src/database/enhanced-seed.ts",
    "db:reset": "npm run db:migrate && npm run db:seed",
    "db:migrate:heroku": "npm run build && node run-migration.js",
    "db:fix-performance": "npm run build && node fix-performance-table.js",
    "db:check-schema": "npm run build && node check-db-schema.js"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.1.0",
    "@nestjs/typeorm": "^10.0.0",
    "@nestjs/config": "^3.1.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.0",
    "@nestjs/throttler": "^5.0.0",
    "@nestjs/websockets": "^10.0.0",
    "@nestjs/platform-socket.io": "^10.0.0",
    "@nestjs/cli": "^10.0.0",
    "typeorm": "^0.3.17",
    "pg": "^8.11.3",
    "bcryptjs": "^2.4.3",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-saml": "^3.2.4",
    "class-validator": "^0.14.0",
    "class-transformer": "^0.5.1",
    "csv-parser": "^3.0.0",
    "multer": "^1.4.5-lts.1",
    "aws-sdk": "^2.1490.0",
    "nodemailer": "^6.9.7",
    "cron": "^3.1.6",
    "socket.io": "^4.7.4",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "@ymca/shared": "file:../shared",
    "@types/express": "^4.17.17",
    "@types/node": "^20.3.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/passport-jwt": "^3.0.13",
    "@types/passport-saml": "^1.1.7",
    "@types/multer": "^1.4.11",
    "@types/nodemailer": "^6.4.14",
    "@types/compression": "^1.7.5"
  },
  "devDependencies": {
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/jest": "^29.5.2",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
